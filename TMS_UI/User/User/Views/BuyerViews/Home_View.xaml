<UserControl x:Class="User.Views.BuyerViews.Home_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:User.Views.BuyerViews"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="SlateGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Content="Welcome Back" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,80,0,0"
               FontSize="20" FontFamily="Segoe UI Semibold" />

        <Border BorderBrush="DimGray" BorderThickness="0,0,4,0" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="0,0,42,0">
            <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Width="100"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    Margin="2"
                    Background="#14212B"
                    >
                <Button x:Name="contract" Content="Contracts" Height="50" Width="100" Command="{Binding NavigateContractCommand}" Background="Transparent" BorderBrush="Transparent" Margin="0,150,0,20" Foreground="#E0FFFF" FontWeight="SemiBold" MouseEnter="contract_MouseEnter" MouseLeave="contract_MouseLeave"/>
                <Button x:Name="settings" Content="Account Settings" Height="50" Width="100" Command="{Binding NavigateSettingsCommand}" Background="Transparent" BorderBrush="Transparent" Margin="0,10,0,0" Foreground="#E0FFFF" FontWeight="SemiBold" MouseEnter="settings_MouseEnter" MouseLeave="settings_MouseLeave"/>

            </StackPanel>
        </Border>

        <Grid Height="60" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" Background="#233C4F">
            <Label Content="HOME"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                FontSize="26"
                FontFamily="open sans condensed"
                Foreground="#E0FFFF"
            />
        </Grid>

        <Grid Height="60" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Background="#233C4F">
            <Label 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Grid.Column="0"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                FontSize="26"
                FontFamily="open sans condensed"
                Foreground="#E0FFFF"
            />
        </Grid>

        <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                   Text="TMS is a critical part of the shipping and logistics industry. Allowing for the purchasing, scheduling, 
monitoring and billing of organizations who desire to have cargo shipped via truck or train, the TMS system 
is a representation of a system that has been worked on by SET students in their co-op work terms. Omnicorp Corporation." 
                   TextWrapping="Wrap" LineHeight="20"
                   VerticalAlignment="Top" HorizontalAlignment="Left"
                   Margin="0,130,10,0" FontSize="14" Foreground="Black" FontWeight="Bold"/>

        <Label Content="Contracts" Grid.Row="1" Grid.Column="1" Margin="10,20,400,0" Height="120" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <ListBox x:Name="customerContracts" Grid.Row="1" Grid.Column="1" Margin="10,50,400,0" Height="90" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>
        <Button x:Name="getContractsBtn" Content="Get Contracts" Grid.Row="1" Grid.Column="1" Margin="10,50,400,80" Height="20" Width="90" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="getContractsBtn_Click"></Button>

        <Label Content="completed orders" Grid.Row="1" Grid.Column="1" Margin="300,20,0,0" Height="120" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
        <ListBox x:Name="completedorders" Grid.Row="1" Grid.Column="1" Margin="300,50,0,0" Height="90" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top"></ListBox>
        <Button x:Name="geninvoceBtn" Content="Generate invoice" Grid.Row="1" Grid.Column="1" Margin="300,0,0,80" Height="20" Width="90" HorizontalAlignment="Left" VerticalAlignment="Bottom"></Button>

        <Button Grid.Column="1" Grid.Row="1" Content="Logout" Command="{Binding NavigateLoginCommand}"
                VerticalAlignment="Bottom" HorizontalAlignment="Right"
                Margin="10" Height="40" Width="80"/>
    </Grid>
</UserControl>
